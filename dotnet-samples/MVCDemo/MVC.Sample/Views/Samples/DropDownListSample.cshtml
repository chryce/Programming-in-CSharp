@model  MVC.Sample.Models.DropDownSampleModel

@{
    ViewBag.Title = "DropDownListSample";

    List<SelectListItem> projectProjects = new List<SelectListItem>
    {
        new SelectListItem{Text="跟团游",Value="1"},
        new SelectListItem{Text="团队",Value="2"},
        new SelectListItem{Text="其他",Value="3"},
    };
    IDictionary<string, object> dic = new Dictionary<string, object>();
    dic.Add("property1", "val1");
    dic.Add("property2", "val2");
}

<h2>DropDownListSample</h2>
<style>
    table#dropdown select {
        display: block;
        width: 100%;
        height: 34px;
        padding: 6px 12px;
        font-size: 14px;
        line-height: 1.42857143;
        color: #555;
        background-color: #fff;
        background-image: none;
        border: 1px solid #ccc;
        border-radius: 4px;
        -webkit-box-shadow: inset 0 1px 1px rgba(0,0,0,.075);
        box-shadow: inset 0 1px 1px rgba(0,0,0,.075);
        -webkit-transition: border-color ease-in-out .15s,-webkit-box-shadow ease-in-out .15s;
        -o-transition: border-color ease-in-out .15s,box-shadow ease-in-out .15s;
        transition: border-color ease-in-out .15s,box-shadow ease-in-out .15s;
    }
</style>
<table id="dropdown" class="table table-bordered">
    <tr>
        <td>
            @Html.DropDownList("ProjectType")
        </td>
        <td>
            @@Html.DropDownList("ProjectType")
        </td>
    </tr>
    <tr>
        <td>
            @Html.DropDownList("ProjectType", "--请选择")
        </td>
        <td>
            @@Html.DropDownList("ProjectType", "--请选择")
        </td>
    </tr>
    <tr>
        <td>
            @Html.DropDownList("dlProjectTypeName1", projectProjects)
        </td>
        <td>
            @@Html.DropDownList("dlProjectTypeName1", projectProjects)
        </td>
    </tr>
    <tr>
        <td>
            @Html.DropDownList("dlProjectTypeName2", projectProjects, new { id = "dlProjectType2", @class = "form-control" })
        </td>
        <td>
            @@Html.DropDownList("dlProjectTypeName2", projectProjects, new { id = "dlProjectType2", @@class = "form-control" })
        </td>
    </tr>
    <tr>
        <td>
            @Html.DropDownList("dlProjectTypeName3", projectProjects, "--请选择--")
        </td>
        <td>
            @@Html.DropDownList("dlProjectTypeName3", projectProjects, "--请选择--")
        </td>
    </tr>
    <tr>
        <td>
            @Html.DropDownList("dlProjectTypeName5", projectProjects, "--请选择--", new { id = "dlProjectType5", @class = "form-control" })
        </td>
        <td>
            @@Html.DropDownList("dlProjectTypeName5", projectProjects, "--请选择--", new { id = "dlProjectType5", @@class = "form-control" })
        
        </td>
    </tr>
    <tr>
        <td>
            @Html.DropDownList("dlProjectTypeName4", projectProjects, dic)
        </td>
        <td>
            @@Html.DropDownList("dlProjectTypeName4", projectProjects, dic)
        </td>
    </tr>
    <tr>
        <td>
            @Html.DropDownList("dlProjectTypeName6", projectProjects, "--请选择--", dic)
        </td>
        <td>
            @@Html.DropDownList("dlProjectTypeName6", projectProjects, "--请选择--", dic)
        </td>
    </tr>
</table>

