@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

@using (Html.BeginForm("ValidateUser", "IIdentityDemo3", FormMethod.Post))
{
    <div class="col-md-offset-3 col-md-6 panel-body" role="main">
        <form>
            <div class="form-group">
                <label for="exampleInputEmail1">用户名</label>
                <input type="text" class="form-control" placeholder="用户名" name="userName">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">权限</label>
                <input type="text" class="form-control" placeholder="权限" name="role">
            </div>
            <div class="form-group">
                <div>
                    <button type="submit" class="btn btn-success col-md-offset-3 col-xs-5 col-lg-5">登录</button>
                </div>
            </div>
        </form>
    </div>
}