@{
    ViewBag.Title = "Login";
}

<div class="col-md-offset-2 col-md-8 panel-body" role="main">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title"> 当前用户: @HttpContext.Current.User.Identity.Name</h3>
        </div>
        <div class="panel-body">
            是否授权:  @HttpContext.Current.User.Identity.IsAuthenticated
        </div>
    </div>
</div>

@using (Html.BeginForm("ValidateUser", "IIdentityDemo3", FormMethod.Post))
{
    <div class="col-md-offset-3 col-md-6 panel-body" role="main">
        <form>
            <div class="form-group">
                <label for="userName">用户名</label>
                <input type="text" class="form-control" placeholder="用户名" name="userName" id="userName">
            </div>
            <div class="form-group">
                <label for="role">权限</label>
                <input type="text" class="form-control" placeholder="权限" name="role" id="role">
            </div>
            <div class="form-group">
                <div>
                    <button type="submit" class="btn btn-success col-md-offset-3 col-xs-5 col-lg-5">登录</button>
                </div>
            </div>
        </form>
    </div>
}