@{
    ViewBag.Title = "Index";
}

@using (Html.BeginForm("AddPermisson", "Samples"))
{
    <form class="form-horizontal">
        @if (!string.IsNullOrWhiteSpace(ViewBag.message))
        {
            <div id="messageInfo">
                @if (ViewBag.success)
                {
                    <div class="alert alert-success" role="alert">@ViewBag.message</div>
                }
                else
                {
                    <div class="alert alert-warning" role="alert">@ViewBag.message</div>
                }
            </div>

        }
        <div class="form-group">
            <label class="col-sm-2 control-label right"> 名称</label>
            <div class="col-sm-10">
                <input type="text" name="PermissionText" class="form-control" id="inputEmail3" placeholder="权限名称">
            </div>
        </div>
        <div class="form-group">
            <label for="inputPassword" class="col-sm-2 control-label">序号</label>
            <div class="col-sm-10">
                <input type="number" name="PermissionOrderNumer" class="form-control" id="inputPassword" placeholder="排序值">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">新增权限 </button>
            </div>
        </div>
    </form>
}

<script>
    $(function () {
        $('.form-control').focus(function () {
            $("#messageInfo").css('display', 'none')
        })
    })
</script>
