@using MVC.Sample.Models
@{
    ViewBag.Title = "关于";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row panel panel-success">
    <div class="col-xs-12 col-md-8 panel-body">

        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">人员信息</h3>
            </div>
            <div class="panel-body">
                <table class="table table-bordered">
                    <tr>
                        <td width="30%">姓名</td>
                        <td width="30%">年龄</td>
                        <td width="40%">年龄</td>
                    </tr>
                    @foreach (Person item in (List<Person>)Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Age</td>
                            <td>@Html.DropDownList("MovieType", ViewBag.MovieType as List<SelectListItem>, new { @class = "form-control" })</td>
                            @*<td>@Html.DropDownList("MovieType")</td>*@
                        </tr>
                    }
                </table>
            </div>
        </div>

        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Panel title</h3>
            </div>
